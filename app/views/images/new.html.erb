<h2>Upload a photo of <%= @pub.name %></h2>
<%= form_for([@pub, @image], :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :attachment, "Photo" %><br/>
    <%= f.file_field :attachment %>
  </p>

  <p>
    <%= f.submit "Upload" %>
  </p>
<% end %>
