%h2 Add Pub
-form_for @pub do |pub_form|
  = pub_form.error_messages 
  .column-left
    %h3 Pub details
    %p
      = pub_form.label :name
      %br/
      = pub_form.text_field :name    
    %p  
      = pub_form.label :address_1
      %br/
      = pub_form.text_field :address_1
    %p  
      = pub_form.label :address_2
      %br/
      = pub_form.text_field :address_2
    %p  
      = pub_form.label :town
      %br/
      = pub_form.text_field :town
    %p 
      = pub_form.label :post_code
      %br/
      = pub_form.text_field :post_code
    %p  
      = pub_form.label :telephone
      %br/
      = pub_form.text_field :telephone
    %p  
      = pub_form.label :number_of_pumps, "Number of hand pumps"
      %br/
      = pub_form.select :number_of_pumps, 1..16
    %p
      = pub_form.label :gbg, "Good Beer Guide listed?"
      %br/
      = pub_form.check_box :gbg
   
    
  .column-right 
    %h3 Description
    %p 
      = pub_form.label :description
      %br/
      = pub_form.text_area :description
    %h3 permanent Beers
    - pub_form.fields_for :beers do |beer_form|	
      #beers_area
        %p
          = beer_form.label :name 
          = beer_form.text_field :name 
        - unless beer_form.object.new_record?
          = beer_form.check_box '_delete'
          = beer_form.label '_delete', 'Remove'
      %p
        = add_beer_link "Add another", beer_form               
	      
        
  %hr.clear
    %p
      = pub_form.submit "Save" 
   