<% if params[:town_id] %>
  <h3>Pubs in <%= h params[:town_id] %></h3>
<% else %>
  <h3>Pubs</h3>
<% end %>
<p><%= link_to "Add a new pub", new_pub_path  %></p>


<%= render :partial => "shared/alphabet_anchor_links" %>

<p>  
  <% last_letter = '' %>
  <% @pubs.each do |pub| %>
    <% unless last_letter == pub.name.upcase[0,1] %>
      <a name="<%=pub.name.upcase[0,1]%>"></a>
    <% end %>
    <%= link_to(pub.name, pub_path(pub)) %>
    <%= h(pub.address) %>
    <br/>
    <% last_letter = pub.name.upcase[0,1] %>
   <% end %>
</p>

<% set_meta(:keywords => 'Real ale, pubs', :description => 'Pub listings') %>
