<h2>Add a new visit for <%= @pub.name %></h2>
<%= form_for([@pub, @visit]) do |visit_form| %>
  <div class="column-left">
    <h3>Visit details</h3>
    <p>
      <%= visit_form.label :comments %>
      <br/>
      <%= visit_form.text_area :comments %>
    </p>
  </div>

  <div class="column-right">
    <h3>Beers available on visit</h3>
      <div id="beers_area">
      <%= visit_form.fields_for :beers do |beer_form| %>
        <%= render "beer_fields", :f => beer_form %>
      <% end %>

      <%= link_to_add_association 'Add another', visit_form, :beers %>
    </div>
    <p>
      <%= visit_form.submit "Add Visit" %>
    </p>
  </div>
<% end %>
