%h2 What's new

%div#whats-new-wrapper

  %h3 Latest Pubs
  %p
    -@pubs.each do |pub|
      = link_to(pub.name, pub_path(pub.slug.name)) + " - " + h(pub.town)
      = " - Added by #{display_username pub.user} - #{distance_of_time_in_words(pub.created_at.to_f, Time.now.to_i)} ago"
      %br/

  %h3 Latest Visits
  %p
    -@visits.each do |visit|
      = link_to(visit.pub.name, pub_path(visit.pub.slug.name)) + " - " + h(visit.pub.town)
      = "Added by #{visit.user ? h(visit.user.username) :  h("@"+visit.tweet_username)} - #{distance_of_time_in_words(visit.created_at.to_f, Time.now.to_i)} ago"
      - if visit.tweet_username
        = link_to("via twitter", "http://twitter.com/#{h(visit.tweet_username)}")
      %br/

  %h3 Latest Photos
  %div.whats-new-photos
    -@images.each_with_index do |image, index|  
      %div{:id => "whats-new-photo-#{index}"}
        %p= link_to(image.pub.name, pub_path(image.pub)) + " - " + h(image.pub.town)
        = lightbox_image_tag(image)    
        %p= "Added by #{display_username image.user} - #{image.user.pints} pints"
      
  
